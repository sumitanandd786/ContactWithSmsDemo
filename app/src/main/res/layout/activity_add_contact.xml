<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/bottom"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="64dp"
            android:layout_height="67dp"
            android:layout_centerVertical="true"

            android:layout_margin="10dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_user" />

        <android.support.design.widget.TextInputLayout style="@style/textinput_style">

            <EditText
                android:id="@+id/et_first_name"
                style="@style/form_element_normal_edittext"
                android:hint="First Name"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textCapSentences"
                android:textColor="@color/edit_text_selector" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/textinput_style">

            <EditText
                android:id="@+id/et_last_name"
                style="@style/form_element_normal_edittext"
                android:hint="Last Name"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textCapSentences"
                android:textColor="@color/edit_text_selector" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/textinput_style">

            <EditText
                android:id="@+id/et_phone_name"
                style="@style/form_element_normal_edittext"
                android:hint="Phone Number"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textCapSentences"
                android:textColor="@color/edit_text_selector" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/textinput_style">

            <EditText
                android:id="@+id/et_email"
                style="@style/form_element_normal_edittext"
                android:hint="Email"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textCapSentences"
                android:textColor="@color/edit_text_selector" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_submit"
            style="@style/button_bottom"
            android:text="Add Contact" />
    </LinearLayout>

</RelativeLayout>